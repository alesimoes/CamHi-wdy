<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/edit_box_bg"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/timing_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/px_10"
                android:paddingLeft="30dip"
                android:paddingRight="@dimen/px_10"
                android:paddingTop="@dimen/px_10"
                android:text="计划录像"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/sd_card_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/px_10"
                android:paddingLeft="30dip"
                android:paddingRight="@dimen/px_10"
                android:paddingTop="@dimen/px_10"
                android:text="SD卡设置"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/equipment_time_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/px_10"
                android:paddingLeft="30dip"
                android:paddingRight="@dimen/px_10"
                android:paddingTop="@dimen/px_10"
                android:text="设备时间设置"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/system_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/px_10"
                android:paddingLeft="30dip"
                android:paddingRight="@dimen/px_10"
                android:paddingTop="@dimen/px_10"
                android:text="系统设置"
                android:textSize="18sp"/>


            <TextView
                android:id="@+id/download_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/px_10"
                android:paddingLeft="30dip"
                android:paddingRight="@dimen/px_10"
                android:paddingTop="@dimen/px_10"
                android:text="下载测试"
                android:textSize="18sp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>